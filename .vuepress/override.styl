.front {
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.7)), url("/front.jpg");
    background-size: cover;
    padding-top: 10%;
    min-height: 85vh;
}

.front.deploy {
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.7)), url("/netlify-deploy.jpg");
    min-height: 85vh;
}

.front.deploy .features
    margin-bottom: 1px

.front .features
    margin-bottom: 55px

.sidebar {
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.6)), url("/sidebar.jpg");
    background-size: cover;
    font-size: 16px !important;
}

.navbar .links {
    font-size: 16px;
}

h1, h2, h3 {
    border-bottom: none !important;
}

.custom-block.tip {
    border-color: #4527a0 !important;
}



.content h1:after,.content h2:after,.content h3:after {
    content: ""; /* This is necessary for the pseudo element to work. */ 
    display: block; /* This will put the pseudo element on its own line. */
    margin: 0 0; /* This will center the border. */
    width: 5%; /* Change this to whatever width you want. */
    padding-top: 20px; /* This creates some space between the element and the border. */
    border-bottom: 3px solid #4527a0; /* This creates the border. Replace black with whatever color you want. */
}


.home .footer
    border-top: none
    color: #fff
    padding: 1.3rem




.home .hero, .home .description, .home .feature h2, .home .feature p{
    color: #fff !important;
}

.sidebar {
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.85)), url("/sidebar.jpg");
  color: #fff
}

.sidebar a {
    color: #fff;
}

.sidebar-links {
    background-color: #19212b;
    border-top: 1px solid #404854;
    border-bottom: 1px solid #404854;
    margin-top: 60px !important
}

.sidebar .nav-links {
    background-color: #19212b;
    border-top: none;
    border-bottom: 1px solid #404854;
}

.theme-container .sidebar {
  background-color: #262f3d;
}

.theme-container .search-box input,
.theme-container .search-box .suggestion a {
  color: #009688;
}

.theme-container .content code {
  background-color: #2e3d44;
}

.navbar {
    background-color: #7953d2 !important;
}

.site-name {
    color: #fff !important;
}

.nav-links, .nav-links a:hover, .nav-links a.router-link-active {
    color: #fff;
}

.search-box {
    display: inline-block;
    position: absolute;
    right: -15rem;
}

.navbar .links {
    font-size: 0.9rem;
    position: absolute;
    right: 16.5rem;
    top: 0.7rem;
}

.deploy .home .hero h1, .deploy .home .hero .description {
    text-indent: -9999px;
    line-height: 0; /* Collapse the original line */
}

.deploy .home .hero h1:after {
  content: "Netlify Deploy Button";
  text-indent: 0;
  display: block;
  line-height: initial;
}

.deploy .home .hero p.description:after {
  content: "Mit dem One-Click Installer kann VuePress in nur einer Minute installiert werden.";
  text-indent: 0;
  display: block;
  line-height: initial;
}